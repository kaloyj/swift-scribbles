<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <!-- Renders a link tag (if your module requires any CSS)
                 <link rel="stylesheet" href="/build/app.css"> -->
        {% endblock %}
    </head>
    <body>
    {% block container %}
        <div class="main-container">
    {% endblock %}
            {% block header %} 
                <div class="websiteName">
                    swift.scribbles
                </div>
                <div class="utilities">
                    {% block utilities %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <div class="profile-util util">
                                <a href="{{ path('profile') }}">{{ app.user.username }}</a>
                            </div>
                            <div class="feed-util util">
                                <a href="{{ path('home') }}">Feed</a>
                            </div>
                            <div class="logout-util util">
                                <a href="{{ path('app_logout') }}">Log Out</a>
                            </div>
                        {% endif %}
                    {% endblock %}
                </div>
            {% endblock %}

            {% block content %}
                <div class="main-content">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% block body %}{% endblock %}
                    {% else %}
                        <div class="trends"></div>
                        <div class="feed">Join the swifty scribblers to view content.</div>
                        <div class="suggestions"></div>
                    {% endif %}
                </div>
            {% endblock %}
            {% block dobutton %}
            <button class="do-btn create">
                <a href="{{ path('create_blog') }}">Scribble swiftly!</a>
            </button>
            {% endblock %}
            {% block javascripts %}

            {{ encore_entry_script_tags('app') }}

            <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js"></script>
                <script src="/build/app.js"></script> -->
            {% endblock %}
        </div>
    </body>
</html>
