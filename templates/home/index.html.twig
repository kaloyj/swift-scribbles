{% extends 'base.html.twig' %}

{% block title %}Hello {{ app.user.username }}!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
    <div class="subsection1"></div>
    <div class="mainsection">
        <div class="messages">
            {% if success is defined %}
                <p>{{ success }}</p>
            {% endif %}
        </div>
        <div class="blogs">
            {% if blogs is not null %}
                {% for blog in blogs %}
                    <div class="blog">
                        <h2>{{ blog.title }}</h2>
                        <div>Author: {{ blog.author.username }}</div>
                        <div>Date Created: {{ blog.creationDate | date("m/d/Y") }}</div>
                        <div>
                            <label>Featured Content</label>
                            <div>{{ blog.featuredContent }}</div>
                        </div>
                        <div>
                            <label>Actual Content</label>
                            <div>{{ blog.content }}</div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div>No one hasn't scribbled anything, yet.</div>
            {% endif %}
        </div>
        <p><a href="{{ path('create_blog') }}"><button>Scribble swiftly!</button></a></p>
    </div>
    <div class="subsection2"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
{% endblock %}
